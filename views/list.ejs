<%- include("header") -%>
    <div class="box" id="heading">
        <h1 id="text123">Bitte wähle aus, was du hochladen möchtest</h1>
    </div>
<br>

    <div>
      <form id="categories" method="get">
        <button type="text" name="work" class="box item categories" formaction="/work" onclick="zitate()">Zitate</button>
        <button type="text" name="etc" class="box item categories" formaction="/etc" onclick="gerüchte()">Gerüchte</button>
      </form>
    </div>

    <div class="box">
      <% itemsList.forEach((item) => { %>
        <form action="/delete/<%= category %>" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value=<%= item._id %> onChange="this.form.submit()">
            <p name="item" style="font-family: "Roboto", sans-serif;"><%= item.name %></p>
          </div>
        </form>
      <% }) %>

      <form class="item" action="/<%= category %>" method="post">
        <input type="text" name="newItem" placeholder="Add new item" autocomplete="off" id="placeholder">
        <button type="submit" name="addButton" class="round-button" value=<%= category %>>+</button>
      </form>
    </div>
<%- include("footer") -%>

<script>
var ausgewählt = localStorage.getItem("ausgewählt");

if(ausgewählt != null) {
document.getElementById("text123").innerHTML = ausgewählt;
document.getElementById("placeholder").placeholder = "Bitte "+ ausgewählt + " eingeben";
}

function zitate(){
ausgewählt = "Zitate";
window.localStorage.setItem("ausgewählt", ausgewählt);
}

function gerüchte() {
ausgewählt = "Gerüchte";
window.localStorage.setItem("ausgewählt", ausgewählt);;
}
</script>